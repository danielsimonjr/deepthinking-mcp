{
  "name": "@mcp-servers/tools",
  "version": "1.0.0",
  "description": "Shared tools for MCP servers",
  "type": "module",
   "scripts": {
    "build": "bun build create-dependency-graph.ts --compile --outfile create-dependency-graph.exe",
    "build:ts": "tsc",
    "build:exe": "npm run build:ts && pkg dist/create-dependency-graph.js --target node18-win-x64 --output create-dependency-graph.exe",
    "start": "bun run create-dependency-graph.ts"
  },
  "bin": {
    "create-dependency-graph": "./dist/create-dependency-graph.js"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
